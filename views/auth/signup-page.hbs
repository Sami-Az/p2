
<div class="container">
  <div class="container-login-form">
      <h2 class="title is-3">Sign Up page</h2>
      <form action="/process-signup" method="POST" class="notification">        
          <h5 class="subtitle is-5">Fullname:</h5>
          <input class="input is-info" type="text" name="fullname" placeholder="john DOE......">        
        <br/>
        <h5 class="subtitle is-5">Email:</h5>
          <input class="input is-info" type="email" name="email" placeholder="johnDOE@kgfht.com....">        
        <br/>
          <h5 class="subtitle is-5">Password:</h5>        
          <input class="input is-info" type="password" name="password" placeholder="*******"/>        
        <br/>
        <br/>
          <h5 class="subtitle is-5">Phone number :</h5>        
          <input class="input is-info" type="number" name="phoneNumber" placeholder="12..."/>        
        <br/>
        <br/>
        <h5 class="subtitle is-5">Location :</h5>        
          <input class="input is-info location-input" type="text" placeholder="12..."/>        
        <br/>
         <!-- these will be set by out Place Autocomplete -->
          <input type="hidden" name="latitude" class="lat-input" />
          <input type="hidden" name="longitude" class="lng-input" />
         {{#if message }}
            <div class="error-message">{{ message }}</div>
          {{/if}}
        <br/>
        <button class="button is-primary">Sign up</button>
        <br>
          <p class="account-message">
            Do you already have an account?
            <a href="/auth/login">Login</a>
          </p>
      </form>
     <div class="my-map" style="display: none;"></div>
    </div>
</div>
