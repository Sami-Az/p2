
<div class="sign-up">
        <h2>Sign Up page</h2>
        <br>

        <form action="/process-signup" method="POST" id="form-container">
          <label>
            Fullname: 
            <input type="text" name="fullname" placeholder="John...">
          </label>
          <br><br>
          <label>
          Username:
          <input id="username" type="text" name="email" placeholder="e.g example@gmail.com">
          </label>
          <br><br>

          <label>
            Password: 
            <input id="password" type="password" name="password" placeholder="******">
          </label>
          <br>

          {{#if message }}
            <div class="error-message">{{ message }}</div>
          {{/if}}

          <br><br>

          <div class="control">
            <button class="button is-primary">Sign up</button>
        </div>
         <br>
          <p class="account-message">
            Do you already have an account?
            <a href="/auth/login">Login</a>
          </p>
  </form>
</div>