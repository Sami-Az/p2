<!-- views/auth/signup.hbs -->
<h2>Sign Up page</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="John....">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="e.g exemple@gmail.com">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>