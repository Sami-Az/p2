<div class="all-products">
   <h2> All products </h2>
   <br>
   <h3>List of all the products</h3>
   <br>
</div>

<ul>
  {{#each productList}}

<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="{{this.imageUrl}}" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">{{this.productName}}</p>
        <p class="subtitle is-6">Brand: {{this.brand}}</p>
      </div>
    </div>

    <div class="content">
      {{this.description}}
      <br>
      <br>
      <button class="button"><a href="/products/{{this._id}}">
        See more details about this product
      </a></button>
    </div>
    {{#if ../blahUser.isAdmin}}
      <div>
         <button class="button"><a href="products/{{this._id}}/edit">Edit</a></button>
         <button class="button"><a href="products/{{this._id}}/delete">Delete</a></button>
     </div>
    {{/if}}
    {{#if this.isMe}}
    <div>
         <button class="button"><a href="products/{{this._id}}/edit">Edit</a> </button>
         <button class="button"></button><a href="products/{{this._id}}/delete">Delete</a></button>
     </div>
    {{/if}}
     <br/>
    </div>
  </div>
<br>
<br>
</div>

  {{/each}}
</ul>

